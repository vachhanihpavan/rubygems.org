<div class="t-body">
  <h2>NEW OWNERSHIP REQUEST</h2>
  <h5><%= "Info if ownership call not present but can request" unless @ownership_call %></h5>
  <%= form_tag rubygem_ownership_requests_path(@rubygem), method: :post, class: "ownership_request_form", id: "new_ownership_request" do %>
    <div class="text_field">
      <%= label_tag :note, "Note for owner:", class: "form__label" %>
      <span class="gem__users__mfa-text">Markdown supported</span>
      <%= text_area_tag :note, nil, class: "form__input form__textarea", required: true %>
    </div>
    <div class="submit_field">
      <%= submit_tag "Apply", data: {disable_with: t("form_disable_with")}, class: "form__submit" %>
    </div>
  <% end %>
</div>
